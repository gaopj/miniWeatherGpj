<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/nextweather1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nextday1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="日期"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/nextwendu1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="温度"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/nexttianqi1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="天气"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/nextfengli1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="风力"
            android:textColor="#ffffff"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nextweather2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:textColor="#ffffff">

        <TextView
            android:id="@+id/nextday2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="日期"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/nextwendu2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="温度"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/nexttianqi2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="天气"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/nextfengli2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="风力"
            android:textColor="#ffffff"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nextweather3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nextday3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="日期"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/nextwendu3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="温度"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/nexttianqi3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="天气"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/nextfengli3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="风力"
            android:textColor="#ffffff"/>
    </LinearLayout>


</LinearLayout>